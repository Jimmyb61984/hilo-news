{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["teams"],
  "properties": {
    "teams": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["code", "name", "league", "country"],
        "properties": {
          "code": {"type": "string", "pattern": "^[A-Z0-9_\\-]{2,10}$"},
          "name": {"type": "string"},
          "league": {"type": "string"},
          "country": {"type": "string"},
          "website": {"type": "string", "format": "uri"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
